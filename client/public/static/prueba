    flipCard(index) {
      this.tarjetas[index].flipped = !this.tarjetas[index].flipped;
    },
    shuffleCards() {
      this.tarjetas = this.tarjetas.sort(() => 0.5 - Math.random());
    }
  },
  mounted() {
    this.startGame();
